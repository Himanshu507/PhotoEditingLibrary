<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootviewtext"
    android:background="#00ffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/textsize_img"
        android:src="@drawable/clear"
        android:layout_margin="12dp"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="32dp"
        android:layout_height="32dp"/>

    <!--<Spinner
        android:id="@+id/spinner_text"
        android:layout_margin="12dp"
        android:backgroundTint="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="40dp"
        android:layout_height="40dp"/>-->

    <ImageView
        android:id="@+id/opacity_img"
        android:src="@drawable/opacity"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:layout_width="32dp"
        android:layout_height="32dp"/>

    <SeekBar
        android:visibility="gone"
        android:id="@+id/color_opacity"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="255"
        android:layout_centerHorizontal="true"
        android:progress="10"
        android:layout_marginTop="60dp"
        android:indeterminate="false"
        />

    <ImageView
        android:id="@+id/add_text_done_tv"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/check_vector"
        android:padding="10dp" />

    <com.himanshu.editlibrary.TextEdit.AutoFitEditText
        android:id="@+id/add_text_edit_text"
        style="@style/EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_menu"
        android:hint="Type Here..."
        android:focusable="true"
        android:padding="5dp"
        android:layout_centerInParent="true"
        android:focusableInTouchMode="true"
        android:layout_below="@+id/add_text_done_tv"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColorHint="#E4E4E4"
        android:isScrollContainer="false"
        android:maxLength="200"
        android:inputType="textMultiLine"
        android:textSize="40sp" />

    <RelativeLayout
        android:id="@+id/font_size_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignBottom="@+id/text_menu"
        android:layout_marginBottom="40dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/font_size_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            tools:background="@android:color/black"
            tools:listitem="@layout/color_picker_item_list" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/font_picker_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignBottom="@+id/text_menu"
        android:layout_marginBottom="40dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/font_picker_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            tools:background="@android:color/black"
            tools:listitem="@layout/font_picker_item_list" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/add_text_color_picker_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignBottom="@+id/text_menu"
        android:layout_marginBottom="40dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/add_text_color_picker_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            tools:background="@android:color/black"
            tools:listitem="@layout/color_picker_item_list" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/text_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/color_img"
            android:src="@drawable/plate_paint"
            android:layout_width="32dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="8dp"
            android:layout_height="32dp"/>

        <ImageView
            android:id="@+id/font_img"
            android:src="@drawable/font"
            android:layout_width="32dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_height="32dp"/>

        <ImageView
            android:id="@+id/font_size_img"
            android:src="@drawable/text_size"
            android:layout_width="32dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            android:layout_height="32dp"/>

    </RelativeLayout>

</RelativeLayout>